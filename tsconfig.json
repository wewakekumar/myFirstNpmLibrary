{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "lib": ["DOM", "ES2015"],
        "typeRoots": ["./types", "./node_modules/@types/**/*"],
        "types": ["node"],
        "diagnostics": false,
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES5",
        "outDir": "lib",
        "declaration": true,
    },
    "include": ["./src/**/*.tsx", "./src/**/*.ts"],
    "exclude": ["node_modules", "public"]
}